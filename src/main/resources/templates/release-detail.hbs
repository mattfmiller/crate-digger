{{#partial "content"}}

{{#if release.isInCollection}}
    <div class="form-group d-flex justify-content-end">
        <a href="/releases/{{release.id}}/delete"><button class="btn btn-delete" type="button" name="button">Delete</button></a>
        <a href="/releases/{{release.id}}/update"><button class="btn btn-edit" type="button" name="button">Edit</button></a>
    </div>
    <div class="row">
        <div class="col-12 col-lg-6 col-xl-4 detail-main-panel">
            <div class="detail-cover-image"><img src="{{release.imageUrl}}"></div>
            <h1 class="page-title">{{release.title}}</h1>
            <h6><strong>RECORD LABEL</strong>: {{release.label}}</h6>
            <h6><strong>CATALOG NBR</strong>: {{release.labelNumber}}</h6>
            <h6 class="d-flex align-items-center"><strong>ARTISTS</strong><a href="/releases/{{release.id}}/artists/new"><button class="btn btn-mini-add" type="submit">+</button></a></h6>
            {{#each artists}}
                <div class="d-flex justify-content-between align-items-center deleteable">
                    <a class="d-flex justify-content-start align-items-center" href="/artists/{{id}}">
                        <div class="artist-thumbnail"><img src="{{imageUrl}}"></div>
                        <h3>{{name}}</h3>
                    </a>
                    <a href="#remove-artist"><button class="btn btn-mini-delete" type="submit">X</button></a>
                </div>
            {{/each}}
            <h3>Tracks</h3>
            <ol class="track-list">
                {{#each tracks}}
                    <li class="deleteable">
                        <span class="d-flex justify-content-between align-items-center">
                            {{title}}
                            <a href="/tracks/{{id}}/delete"><button class="btn btn-mini-delete" type="submit">X</button></a>
                        </span>
                    </li>
                {{/each}}
            </ol>
            <form class="form-group d-flex align-items-center" action="/releases/{{release.id}}/tracks" method="post">
                <input class="form-control" type="text" name="title">
                <button class="btn btn-edit" type="submit">Add Track</button>
            </form>
        </div>
        <!-- 2ND COLUMN -->
        <div class="col-12 col-lg-6 col-xl-8">
            <div class="row">
                <div class="col">
                    <h4>Record</h4>
                    <h6><strong>TYPE</strong>: {{release.mediaType}}</h6>
                    <h6><strong>CONDITION</strong>: {{mediaCondition}}</h6>
                </div>
                <div class="col">
                    <h4>Sleeve</h4>
                    <h6><strong>TYPE</strong>: {{release.sleeveType}}</h6>
                    <h6><strong>CONDITION</strong>: {{sleeveCondition}}</h6>
                </div>
            </div>
            <h4>Purchase</h4>
            <h6>Date: {{release.datePurchased}}</h6>
            <h6>Seller: {{release.seller}}</h6>
            <h6>Price: ${{dollarPrice}}</h6>
            <h4>Notes</h4>
            {{#each notes}}
                <p class="deleteable">
                    <span class="d-flex justify-content-between">
                        {{formattedCreatedAt}}: {{content}}
                        <a href="/notes/{{id}}/delete"><button class="btn btn-mini-delete" type="submit">X</button></a>
                    </span>
                </p>
            {{/each}}
            <form class="form-group d-flex align-items-center" action="/releases/{{release.id}}/notes" method="post">
                <input class="form-control" type="text" name="content">
                <button class="btn btn-edit" type="submit">Add Note</button>
            </form>
            <div class="d-flex justify-content-end">
                <h6 class="cratemate-social-heading">Mates who own this record</h6>
            </div>
            <div class="d-flex justify-content-end">
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
                <div class="cratemate-thumbnail"><img src="/images/matt-m.jpeg"></div>
            </div>
        </div>
    </div>
{{else}}
    <div class="form-group d-flex justify-content-end">
        <a href="/releases/{{release.id}}/delete"><button class="btn btn-delete" type="button" name="button">Delete</button></a>
        <a href="/releases/{{release.id}}/update"><button class="btn btn-edit" type="button" name="button">Edit</button></a>
        <a href="/releases/{{release.id}}/to-collection"><button class="btn btn-collection" type="button" name="button">Add to Crate</button></a>
